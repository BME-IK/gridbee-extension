{
	"manifest_version": 1,
  "name": "GridBee Client",
  "version": "3.0",
  "description": "GridBee client extension",
	"icons":
	{
		
		"128": "images/icon.png"
	},
  
  "browser_action":
  {
    "default_icon": "images/icon.png",
    "popup": "popup.html"
  },
	
	"content_scripts" :
	[
		{
			"matches" :
			[
				"http://*/*",
				"https://*/*",
				"file:///*/*"
			],
			"js" : ["contentscript.js"],
			"run_at" : "document_idle",
			"all_frames" : true
		}
	],
	
	
  "background_page": "background.html",
  "options_page": "options.html",
   
  "permissions":
  [
		"tabs",
		"http://*/*",
		"https://*/*",
		"background",
		"notifications",
		"idle"
  ]
}